{
  "name": "nest_proj",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "dev": "yarn docker:up && yarn db:migrate:dep && yarn db:generate && nest start --watch",
    "docker:up": "docker compose up -d",
    "db:migrate:dev": "yarn prisma migrate dev --name init",
    "db:migrate:dep": "yarn prisma migrate deploy",
    "db:generate": "yarn prisma generate",
    "db:seed": "ts-node prisma/seeds/seed.ts",
    "db:studio": "yarn prisma studio",
    "type-check": "tsc --noEmit",
    "lint": "eslint \"{src,libs,test}/**/*.ts\" --fix",
    "prettier": "prettier --write \"src/**/*.{js,ts}\"",
    "format": "yarn type-check && yarn lint && yarn prettier",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "build": "nest build",
    "postbuild": "yarn db:migrate:dep",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main"
  },
  "dependencies": {
    "@apollo/server": "^4.10.4",
    "@nestjs/apollo": "^12.2.0",
    "@nestjs/axios": "^3.0.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/graphql": "^12.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^4.1.0",
    "@prisma/client": "5.16.1",
    "axios": "^1.7.2",
    "graphql": "^16.9.0",
    "graphql-type-json": "^0.3.2",
    "nest-commander": "^3.14.0",
    "puppeteer": "^22.12.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.14.9",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prisma": "^5.16.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
